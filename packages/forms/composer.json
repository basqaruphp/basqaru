{
    "name": "basqaru/forms",
    "description": "Easily add beautiful forms to any Livewire component.",
    "license": "MIT",
    "homepage": "https://github.com/basqaruphp/basqaru",
    "support": {
        "issues": "https://github.com/basqaruphp/basqaru/issues",
        "source": "https://github.com/basqaruphp/basqaru"
    },
    "require": {
        "php": "^8.1",
        "danharrin/date-format-converter": "^0.3",
        "basqaru/support": "self.version",
        "illuminate/console": "^10.0",
        "illuminate/contracts": "^10.0",
        "illuminate/database": "^10.0",
        "illuminate/filesystem": "^10.0",
        "illuminate/support": "^10.0",
        "illuminate/validation": "^10.0",
        "illuminate/view": "^10.0",
        "spatie/laravel-package-tools": "^1.9"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Basqaru\\Forms\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Basqaru\\Forms\\FormsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
