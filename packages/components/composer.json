{
    "name": "basqaru/components",
    "description": "Core helper methods and foundation code for all Basqaru packages.",
    "license": "MIT",
    "homepage": "https://github.com/basqaruphp/basqaru",
    "support": {
        "issues": "https://github.com/basqaruphp/basqaru/issues",
        "source": "https://github.com/basqaruphp/basqaru"
    },
    "require": {
        "php": "^8.1",
        "basqaru/support": "self.version",
        "illuminate/contracts": "^10.0",
        "illuminate/support": "^10.0",
        "illuminate/view": "^10.0",
        "spatie/laravel-package-tools": "^1.9"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Basqaru\\Components\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Basqaru\\Components\\ComponentsServiceProvider"
            ]
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../*"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
